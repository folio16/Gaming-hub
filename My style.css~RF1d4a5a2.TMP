
*{ margin:0px;
padding:0px;}
#wrap{ 
border:0px solid #000;
height:1000px; 
width:950px; 
margin:auto; 
}
#header{ background-image:url(images/shj.jpg);
height:80px; 
margin-top:10px; 
padding:3px; 
}
#gs img{ 
margin-top:1px; 
margin-left:80px; 
animation:AJ 2s infinite alternate;} 
 


@keyframes AJ{ 
0%{ border-radius:0%;}
100%{ border-radius:50%; transform:rotate(-30deg);}
}
#gs img:hover{ box-shadow:0px 6px 7px; color:#960;}
  
#menu{ 
background-color:#000; 
height:50px;}
#menu ul{ list-style:none;}
#menu ul li{ float:left; 
text-align:center; 
line-height:50px;
 width:150px; 
border:0px solid #FFF; 
height: 50px; 
 
 }

#menu ul li a{ text-decoration:none; 
font-family:Georgia, "Times New Roman", Times, serif; 
font-size:20px; 
font-weight:bold; 
color:#FFF; 
display:block; 
 } 
#menu ul li a:hover 
{ color:#F00; font-family:Verdana, Geneva, sans-serif; 
background-color:#8DFF1C; }


